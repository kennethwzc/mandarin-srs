# ==================================
# DATABASE CONFIGURATION
# ==================================

# PostgreSQL database connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?[options]
# Production: Use connection pooling URL from Supabase Pro
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# ==================================
# SUPABASE CONFIGURATION
# ==================================

# Supabase Project URL (safe to expose publicly)
# Example: https://abcdefghijklmnop.supabase.co
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"

# Supabase Anonymous Key (safe to expose publicly - RLS protected)
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# Supabase Service Role Key (SECRET - never expose to client!)
# Used for server-side admin operations only
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ==================================
# SENTRY ERROR TRACKING (OPTIONAL)
# ==================================

# Sentry Data Source Name (DSN) for error tracking
# Get from: https://sentry.io/settings/[org]/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN="https://[key]@[org].ingest.sentry.io/[project]"

# Sentry authentication token for release management
# Get from: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=""

# Sentry organization and project slugs
SENTRY_ORG="your-organization"
SENTRY_PROJECT="your-project"

# ==================================
# POSTHOG ANALYTICS (OPTIONAL)
# ==================================

# PostHog API Key (safe to expose - GDPR compliant)
# Get from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY="phc_[key]"

# PostHog API Host
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ==================================
# STRIPE PAYMENT PROCESSING (OPTIONAL)
# ==================================

# Stripe Publishable Key (safe to expose publicly)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_[key]"

# Stripe Secret Key (SECRET - never expose to client!)
STRIPE_SECRET_KEY="sk_live_[key]"

# Stripe Webhook Secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET="whsec_[key]"

# ==================================
# ANTHROPIC AI (OPTIONAL)
# ==================================

# Anthropic API Key for AI features (mnemonic generation, etc.)
ANTHROPIC_API_KEY="sk-ant-[key]"

# ==================================
# APPLICATION CONFIGURATION
# ==================================

# Next.js environment (development, production, test)
NODE_ENV="production"

# Base URL for the application (used for emails, redirects, etc.)
# Production: https://yourdomain.com
# Staging: https://staging.yourdomain.com
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# ==================================
# FEATURE FLAGS (OPTIONAL)
# ==================================

# Enable/disable features in production
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_STRIPE="false"
NEXT_PUBLIC_ENABLE_AI_FEATURES="false"

# ==================================
# SECURITY SETTINGS
# ==================================

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60000"

# Session duration (milliseconds)
SESSION_MAX_AGE="604800000"
